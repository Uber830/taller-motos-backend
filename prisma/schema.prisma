datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  sessionFacebook Int @default(0)
  sessionGoogle Int @default(0)
  email     String   @unique
  password  String
  fullName  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  OWNER
  MECHANIC
}
